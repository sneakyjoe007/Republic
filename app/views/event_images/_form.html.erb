<%= simple_form_for(@event_image) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name %>
  	<%= f.input :image %>
  	<%= f.input :category_id, as: :select, collection: Category.all.order("name ASC"), include_blank: "Select a category..." %>
  </div>

  <br>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
