<h1>Listing Event Images</h1>

<div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Items <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Categories", categories_path,  class: "btn btn-link" %></li>
          <li><%= link_to "Images", event_images_path,  class: "btn btn-link" %></li>
        </ul>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Category</th>
    <th class="center">Action</th>
  </tr>

<% @event_images.each do |event_image| %>
  <tr>
    <td class="center"><%= image_tag event_image.image.url(:thumb) %> </td>
    <td><%= event_image.name.upcase %> </td>
    <td><%= event_image.category.name.upcase %> </td>
    <td>
     <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Action <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "View", event_image,  class: "btn btn-link" %></li>
          <li><%= link_to "Edit", edit_event_image_path(event_image),  class: "btn btn-link" %></li>
          <li><%= link_to "Delete", event_image, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-link" %></li>
        </ul>
      </div>
    </td>
  </tr>
  <% end %>

</table>

<%= link_to 'New Event Image', new_event_image_path, class: "btn btn-link" %>
