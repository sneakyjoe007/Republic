<div class="center">
	<h2>Current Volunteer Registrations</h2>
</div>

<table class="table table-striped table-bordered">
	<tr>
		<th class="center">Event Name</th>
		<th class="center">Organizer</th>
		<th class="center">User Registered</th>
	</tr>

	<% @volunteers.each do |volunteer| %>
	 <tr>
	 	<td class="center"><%= link_to volunteer.event.name, volunteer.event %> </td>
	 	<td class="center"><%= volunteer.event.organization.name %> </td>
	 	<td class="center"><%= volunteer.user.name %> </td>
	 </tr>
	<% end %>
</table>
