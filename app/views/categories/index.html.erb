<h1>Categories</h1>

<%= link_to 'New Category', new_category_path, class: "btn btn-link" %>


<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Action</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td class="center"><%= image_tag category.image.url(:thumb) %> </td>
    <td><%= category.name.upcase %> </td>
    <td>
     <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Action <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "View", category,  class: "btn btn-link" %></li>
          <li><%= link_to "Edit", edit_category_path(category),  class: "btn btn-link" %></li>
          <li><%= link_to "Delete", category, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-link" %></li>
        </ul>
      </div>
    </td>
  </tr>
  <% end %>

</table>

<%= link_to 'New Category', new_category_path, class: "btn btn-link" %>
