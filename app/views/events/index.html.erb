<h1>Volunteer Events</h1>
<div class="center">
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= image_tag "default.jpeg" %>
          <div class="caption">
            <h3><%= event.name %></h3>
            <p><%= event.description %></p>
            <%= link_to 'Show', event, class: "btn btn-link" %>
            <%= link_to 'Edit', edit_event_path(event), class: "btn btn-link" %>
            <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>


<br>

<%= link_to 'New Event', new_event_path, class: "btn btn-link" %>
