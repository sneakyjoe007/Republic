<div id="userEvents">

	<% @volunteers.each do |volunteer| %>
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="col-md-2 back-fill profile-date">
						<div class="month">	<%= volunteer.event.event_date.strftime("%^b") %> </div>
					<div class="date"> <%= volunteer.event.event_date.strftime("%d") %> </div>
					<div class="day"><%= volunteer.event.event_date.strftime("%^a") %> </div>
				</div>
				<div class="col-md-8">
					<div class="profile-event-header">
						<%= volunteer.event.category.name %>
					</div>
					<div class="profile-description">
						<%= truncate(volunteer.event.description, :length => 180) %> <br>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>