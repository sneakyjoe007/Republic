<p id="notice"><%= notice %></p>

<h2> Profile Page </h2>
<h3><%= current_user.name %></h3>

<div class="row">
	<div class="col-md-4">
		<div class="thumbnail">
			<%= image_tag "default.jpeg" %>
		</div>
	</div>
	<div class="col-md-6">
		  <p> This is a placeholder for Profile Stuff </p>
	</div>
</div>

<table class="table table-striped table-bordered">
	<tr>
		<th class="center">Event Name</th>
		<th class="center">Users Registered</th>
	</tr>

	<% @volunteers.each do |volunteer| %>
	 <tr>
	 	<td class="center"><%= link_to volunteer.event.name, volunteer.event %> </td>
	 	<td class="center"><%= volunteer.event.volunteers_current %></td>
	 </tr>
	<% end %>
</table>