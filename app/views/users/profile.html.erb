<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-2">
		<div class="profile-image">
		<%= image_tag "profile.gif" %>
		</div>
		
	</div>
	<div class="col-md-1">
		<strong>RANK</strong>
		<br>
		<br>
		<br>
		<div class="double-size"><%= image_tag "rank.png" %></div>
	</div>
	<div class="col-md-9">
		<strong>BADGES EARNED</strong>
		<table>
			<% @categories.each_slice(9) do |row| %>
			<tr>
				<% row.each do |category| %>
				<td><div class="profile-category"><%= image_tag category.image.url(:thumb) %></div></td>
				<% end %>
			</tr>
			<% end %>
		</table>
	</div>
</div>

<br>

<div class="row">
	<div class="col-md-2">
		<div class="profile-name">
			<%= current_user.name.upcase %>
		</div>
	</div>
	<div class="col-md-10">
		<div class="line">
			<strong>NEWS FEED</strong>
			<span>
			<%= link_to 'PERSONAL', profile_path %>
			<%= link_to 'CORPORATE', profile_path %>
			<%= link_to 'FRIENDS', profile_path %>
			<%= link_to 'ALL', profile_path %>
			</span>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="col-md-2">
		<%= image_tag "calendar.gif" %>
	</div>

	<div class="col-md-10">

		<% @events.each do |event| %>

		<div class="panel panel-default">
			<div class="panel-body">
				<div class="col-md-1">
					<h4 class="profile-date">
						<p><%= event.event_date.strftime("%a") %></p>
						<p><%= event.event_date.strftime("%^b") %></p>
						<p><%= event.event_date.strftime("%d") %></p>
					</h4>
				</div>
				<div class="col-md-8">
					<div class="profile-event-header">
						<%= event.category.name %>
						<span><%= link_to 'Enlist', profile_path %></span>
						<span><%= link_to 'Recruit', profile_path %></span>
					</div>
					<p><%= truncate(event.description, :length => 180) %></p>
				</div>

				
				
			</div>
		</div>
		

		<% end %>
	</div>
</div>