<table class="table table-striped table-bordered">
	<tr>
		<th class="center">User Name</th>
		<th class="center">Events</th>
	</tr>

	<% @users.each do |user| %>
	 <tr>
	 	<td class="center"><%= user.name %> </td>
	 	<td class="center"><%= user.volunteers.count %> </td>
	 </tr>
	<% end %>
</table>

<br>

<table class="table table-striped table-bordered">
	<tr>
		<th class="center">Event Name</th>
		<th class="center">Event Date</th>
		<th class="center">Users Registered</th>
		<th class="center">Edit</th>
		<th class="center">Destroy</th>
	</tr>

	<% @events.each do |event| %>
	 <tr>
	 	<td class="center"><%= link_to event.name, event %> </td>
	 	<td class="center"><%= event.event_date.strftime("%e %b %Y") %></td>
	 	<td class="center"><%= event.volunteers_current %></td>
	 	<td class="center"><%= link_to "Edit", edit_event_path(event), class: "btn btn-link" %></td>
	 	<td class="center"><%= link_to "Delete", event, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-link" %></td>
	 </tr>
	<% end %>
</table>